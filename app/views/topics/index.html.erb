<h1>Topics</h1>

<table>
  <tr>
    <th></th>
    <th>Topics</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= image_tag topic.icon.url :thumb %></td>
    <td><%= topic.title %></td>
    <td><%= topic.summary %></td>
    <td><%= link_to 'Show', topic %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

